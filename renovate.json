{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchManagers": ["dockerfile"],
      "dependencyDashboard": true,
      "groupName": "docker-updates"
    },
    {
      "matchManagers": ["pip_requirements"],
      "matchPackagePatterns": ["*"],
      "dependencyDashboard": true,
      "groupName": "python-updates" 
    },
    {
      "matchDepTypes": ["docker"],
      "matchPackagePatterns": ["^monitoring-stack", "^monitoring-traefik"],
      "groupName": "monitoring-stack-updates" 
    },
    {
      "matchDepTypes": ["docker"],
      "matchPackagePatterns": ["^cadvisor"],
      "groupName": "cadvisor-updates"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^monitoring-stack\\.yaml$", "^monitoring-traefik\\.yaml$"],
      "matchStrings": ["image:\\s?(?<depName>[\\w\\-/]+):(?<currentValue>[\\w\\-\\.]+)"],
      "datasourceTemplate": "docker"
    }
  ]
}
